            ; entry address
coldvec     .word cold

            ; initial user interrupt vectors
irqusr      .word irqret
            ; These should never run
brkusr      .word exception
nmiusr      .word exception

            ; redirect basic restart vector
            ; to finish the init sequence
            ; (hooks in via stop function)
stopusr     .word setiomap

playnum     .byte 0
speed       .byte 0
initvec     .word 0
playvec     .word 0
rndwait     .word 0
initiomap   .byte 0
playiomap   .byte 0
video       .byte 0
flags       .byte 0

            ; init/play PSID
play        jmp (playvec)
init        jmp (initvec)

            ; cold start
cold        sei

            ; set CIA Timer A to 60Hz
            lda video
            beq ntsc
pal         lda #$25
            ldx #$40
            bne timer
ntsc        lda #$95
            ldx #$42
timer       sta $dc04
            stx $dc05

            ; set VICII raster to line 0 for PSIDs
            lda #$1b
            ldx #$00
            cpx initiomap
            bne vicinit
            ; set VICII raster to line 311 for RSIDs
            ora #$80
            ldx #$37
vicinit     sta $d011
            stx $d012
            lda $d019
            sta $d019

            ; 0 indicates VIC timing, else it's from CIA
            ldx #$81
            lda speed
            bne ciainit

            ; enable VICII raster interrupt
            stx $d01a
            beq doinit

            ; enable CIA 1 timer A interrupt
ciainit     stx $dc0d

            ; setup TOD clock divider
doinit      lda video
            ror
            ror
            sta $dd0e
            ; always enable timer A for random numbers
            ora #$01
            sta $dc0e

            ; If play address, override default irq vector so
            ; we reach are routine to handle play routine
            lda playiomap
            beq noplay
            lda #<irqjob
            sta $0314

            ; set I/O map and call song init routine
noplay      lda initiomap
            bne setbank
            ; Only release interrupt mask for real
            ; C64 tunes (initiomap = 0) thus
            ; providing a more realistic environment
            lda #$37
            ; cli dosen't come into effect until
            ; after the sta!
            cli
setbank     sta $01

            ; simulate time before user loads tune
random      tya
            ldx rndwait
            ldy rndwait+1
            inx
            iny
wait        dex
            bne wait
            dey
            bne wait
            tay

setregs     lda flags
            pha
            ldx #0
            ldy #0
            lda playnum
            plp
            jsr init
setiomap    lda initiomap
            beq idle
            lda playiomap
            beq run
            lda #$37
            sta $01
run         cli
idle        jmp idle

irqjob      lda $01
            pha
            lda playiomap
            sta $01
            lda #0
            jsr play
            pla
            sta $01
            lda $d019
            sta $d019

            ; IRQ Exit (code from Kernel ROM)
irqret      lda initiomap
            bne irqret2
            jmp $ea31
irqret2     lda $dc0d
            pla
            tay
            pla
            tax
            pla
            rti

            ; HLT
exception   .byte $02

.end
